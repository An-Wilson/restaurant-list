<div class="container d-flex align-items-end" style="padding: 0 110px;">
  <!-- search bar -->
  <div class="container search-bar">
    <div class="search-bar-outer">
      <div class="search-bar-inner">
        <form action="/search">
          <h4 class="mb-2">尋找餐廳：</h4>
          <div class="input-group">
            <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
              value="{{ keyword }}" aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <!-- sort selector -->
  <form action="/sort">
    <select class="form-select" name="sort" id="sort">
      <option selected>排序</option>
      <option value="0">A - Z</option>
      <option value="1">Z - A</option>
      <option value="2">類別</option>
      <option value="3">地區</option>
    </select>
  </form>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each restaurants}}
        <div>
          <a href="/restaurants/{{ this._id }}" class="text-secondary">
            <div class="card mb-2">
              <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name }}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{ this.name }}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{ this.category }}
                </div>
                <span class="badge rounded-pill bg-danger font-weight-normal">
                  {{ this.rating }}
                  <i class="fas fa-star fa-xs"></i>
                </span>
              </div>
            </div>
          </a>
          <div class="d-flex justify-content-end align-items-center mb-3">
            <a href="/restaurants/{{ this._id }}/edit" class="mx-2">修改</a>
            <a href="/restaurants/{{ this._id }}" class="mx-2">詳細資料</a>
            <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-warning mx-1">刪除</button>
            </form>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>