<div class="container mt-4">
  <form action="/restaurants" method="POST">
    <div class="row mb-3">
      <label for="name" class="col-sm-2 col-form-label">店名 (*必填欄位)</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="name" name="name" placeholder="請輸入店名" required>
      </div>
    </div>
    <div class="row mb-3">
      <label for="nameEn" class="col-sm-2 col-form-label">店名（英文）</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="nameEn" name="nameEn" placeholder="請輸入餐廳的英文名字">
      </div>
    </div>
    <div class="row mb-3">
      <label for="category" class="col-sm-2 col-form-label">類別</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="category" name="category" placeholder="餐廳類別">
      </div>
    </div>
    <div class="row mb-3">
      <label for="location" class="col-sm-2 col-form-label">地址</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="location" name="location" placeholder="餐廳地址">
      </div>
    </div>
    <div class="row mb-3">
      <label for="phone" class="col-sm-2 col-form-label">電話</label>
      <div class="col-sm-10">
        <input type="tel" class="form-control" id="phone" name="phone" placeholder="餐廳電話">
      </div>
    </div>
    <div class="row mb-3">
      <label for="image" class="col-sm-2 col-form-label">餐廳照片</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="image" name="image" placeholder="餐廳照片連結">
      </div>
    </div>
    <div class="row mb-3">
      <label for="rating" class="col-sm-2 col-form-label">評分</label>
      <div class="col-sm-10">
        <input type="number" class="form-control" id="rating" name="rating" step="0.1" min="0" max="5">
      </div>
    </div>
    <div class="row mb-3">
      <label for="description" class="col-sm-2 col-form-label">餐廳介紹</label>
      <div class="col-sm-10">
        <textarea rows="4" class="form-control" id="description" name="description" placeholder="餐廳簡述"></textarea>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">新增此餐廳</button>
    <a href="/" class="btn btn-dark mx-3">取消新增並返回首頁</a>
  </form>
</div>

